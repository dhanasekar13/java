class db1 {

	static ArrayList<Long> phoneno = new ArrayList<>();
	//static ArrayList<String> emailid = new ArrayList();
	//static ArrayList<String> name = new ArrayList<>();
	//static ArrayList<String> Emailname = new ArrayList();
	static ArrayList name = new ArrayList();
	static ArrayList Emailname = new ArrayList<>();
	static ArrayList Address = new ArrayList<>();
	static ArrayList  dob= new ArrayList();

	Scanner na = new Scanner(System.in);

	db1() throws IOException {
		System.out.println("Enter the Phone number-");
		long mam = na.nextLong();
		phoneno.add(mam);
		FileOutputStream f1 = new FileOutputStream("C:/Users/User/Desktop/New folder (2)/contact detail1/abc.txt");
		ObjectOutputStream o1 = new ObjectOutputStream(f1);
		o1.writeObject(phoneno);
		

	//for entering name	
			System.out.println("Enter the Name");
			String str1 = na.nextLine();
			name.add(str1);
			FileOutputStream f11 = new FileOutputStream("C:/Users/User/Desktop/New folder (2)/contact detail1/abc2.txt");
			ObjectOutputStream o11 = new ObjectOutputStream(f11);
			o1.writeObject(name);
		
	//for entering email id		
			System.out.println("Enter the Email id--");
			String str = na.nextLine();
			Emailname.add(str);
			FileOutputStream f2 = new FileOutputStream("C:/Users/User/Desktop/New folder (2)/contact detail1/abc3.txt");
			ObjectOutputStream o2 = new ObjectOutputStream(f2);
			o1.writeObject(Emailname);
	//for entering address 		
			System.out.println("Enter the -Address ");
			String str2 = na.nextLine();
			Address.add(str2);
			FileOutputStream f3 = new FileOutputStream("C:/Users/User/Desktop/New folder (2)/contact detail1/abc4.txt");
			ObjectOutputStream o3 = new ObjectOutputStream(f3);
			o1.writeObject(Address);
	//for entering date of birth		
			System.out.println("Enter the date of birth-");
			String str3 = na.nextLine();
			dob.add(str3);
			FileOutputStream f4 = new FileOutputStream("C:/Users/User/Desktop/New folder (2)/contact detail1/abc5.txt");
			ObjectOutputStream o4 = new ObjectOutputStream(f4);
			o1.writeObject(dob);
	}
	db1(String a) {
		System.out.println("Enter whose detail to view");
		String str = na.nextLine();

		int v = name.indexOf(str);
		new db1(v);
		
	}

	db1(int a) {

		System.out.println(phoneno.get(a));
		System.out.println(name.get(a));
		System.out.println(Emailname.get(a));
		System.out.println(Address.get(a));
		System.out.println(dob.get(a));

	}

	db1(int a, String b) {
		System.out.println("Enter whose info to update");
		String d = na.nextLine();
		int v = name.indexOf(d);
		new db1(v);
		
	}

	db1(int a, int b, int c) throws IOException, Exception {
		ArrayList l = new ArrayList<>();
		FileInputStream fi = new FileInputStream("C:/Users/User/Desktop/New folder (2)/contact detail1/abc.txt");
		ObjectInputStream is = new ObjectInputStream(fi);
		db1 i = (db1) is.readObject();
		
		System.out.println(name);
		// l.addAll();
		System.out.println(i.toString());
	}
}


